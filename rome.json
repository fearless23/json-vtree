{
  "files": {
    "ignore": [
      ".husky",
      ".vscode",
      "lib",
      "docs",
      "node_modules"
    ]
  },
  "formatter": {
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "noVar": "off",
        "noVoidTypeReturn": "error",
        "useConst": "error",
        "useNumericLiterals": "error",
        "noRestrictedGlobals": "error",
        "useExhaustiveDependencies": "off",
        "noBannedTypes": "off"
      }
    }
  }
}